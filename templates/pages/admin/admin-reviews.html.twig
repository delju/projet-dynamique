{% extends 'Layouts/admin.html.twig' %}

{% block content %}

    <div class="col-md-10 offset-md-1 col-lg-9 offset-lg-0">
        <!-- Recently Favorited -->
        <div class="widget dashboard-container my-adslist">
            <h2 class="widget-header">Les commentaires</h2>
            <table class="table table-responsive product-dashboard-table">
                <thead>
                <tr>
                    <th class="text-center">Date</th>
                    <th class="text-center">Utilisateur</th>
                    <th class="text-center">Manga</th>
                    <th class="text-center">Commentaires</th>
                    <th class="text-center">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for comment in comments %}
                <tr>

                    <td class="product-thumb">
                        <p>{{ comment.date  | date('d-m-Y') }}</p>
                    </td>
                    <td class="author" >
                        <span>{{ comment.user.username }}</span>
                    </td>
                    <td class="tomes"><span>{{ comment.manga.frenchTitle }}</span></td>
                    <td class="product-details"><p>{{ comment.message }}</p></td>
                    <td class="action" data-title="Action">
                        <div class="">
                            <ul class="list-inline justify-content-center">
                                <li class="list-inline-item">
                                    <a data-placement="top" title="Delete" class="delete" href="" data-toggle="modal"
                                       data-target="#deleteitem"> <i class="fa fa-trash"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>

        <!-- pagination -->
        <div class="pagination justify-content-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <!-- pagination -->

    </div>


{% endblock content %}