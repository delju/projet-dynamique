{% extends 'base.html.twig' %}

{% block title %}Otaku's Collection - Home{% endblock %}

{% block section %}

    <!--===============================
    =            Hero Area            =
    ================================-->

    <section class="hero-area bg-1 text-center overly">
        <!-- Container Start -->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Header Content -->
                    <div class="content-block">
                        <h1>Otaku's Collection </h1>
                        <p> </p>

                    </div>

                </div>
            </div>
        </div>
        <!-- Container End -->
    </section>



    <!--===========================================
    =            Last Comment section            =
    ============================================-->

    <section class="popular-deals section bg-gray">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title">
                        <h2>Les derniers ajout√©s</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- offer 01 -->
                <div class="col-lg-12">
                    <div class="trending-ads-slide">
                        {% for lastAdd in lastAdded %}
                            <div class="col-sm-12 col-lg-4">
                                <!-- product card -->
                                <div class="product-item bg-light">
                                    <div class="card">
                                        <div class="thumb-content">
                                            <!-- <div class="price">$200</div> -->
                                            <a href="{{ url('single', {slug: lastAdd.slug}) }}">
                                                <img class="card-img-top img-fluid" src="{{ asset('uploads/'~lastAdd.photo.url) }}" alt="Card image cap">
                                            </a>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-title"><a href="{{ url('single', {slug: lastAdd.slug})}}">{{ lastAdd.frenchTitle }}</a></h4>
                                            <p class="card-text">{{ lastAdd.date | date('d-m-Y') }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>


            </div>
        </div>
    </section>

    <!--===========================================
    =            New arrives section           =
    ============================================-->
    <section class="popular-deals section bg-gray">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title">
                        <h2>Les derniers sortis</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- offer 01 -->
                <div class="col-lg-12">
                    <div class="trending-ads-slide">
                        {% for lastRelease in lastReleases %}
                        {{ include('element/tomes.html.twig') }}

                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>


            </div>
        </div>
    </section>


    <!--===========================================
    =            Recent section            =
    ============================================-->
    <section class="popular-deals section bg-gray">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title">
                        <h2>Derniers commentaires</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- offer 01 -->
                <div class="col-lg-12">
                    <div class="trending-ads-slide">
                        {% for lastCommented in lastComment %}
                            <div class="col-sm-12 col-lg-8">
                                <!-- product card -->
                                <div class="product-item bg-light">
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="card-title mb-2">{{ lastCommented.manga }}</h4>
                                            <h6 class="card-subtitle mb-2 text-center">{{ lastCommented.user.username }}</h6>
                                            <p class="card-text mb-2">{{ lastCommented.message }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock section %}