{% extends 'base.html.twig' %}

{% block section %}
    <section class="hero-area bg-1 text-center overly">
        <!-- Container Start -->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Header Content -->
                    <div class="content-block">
                        <h1>Otaku's Collection </h1>
                        <p> </p>

                    </div>
    <!-- Advance Search -->
    <div class="advance-search">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12 col-md-12 align-content-center">
                    <form>


                      {{ form_start(searchFullForm) }}
                        <div class="form-row">
                            <div class="form-group col-md-10">
                                {% set searchForm = getSearchForm() %}

                                    {{ form_widget(searchForm) }}


                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    </div>
    </div>
    </div>
    </section>

    <section class="section-sm">
        <div class="container">

            <div class="row">
                <div class="col-md-3">
                    <div class="category-sidebar">

                        <!-- Filtre Classification-->
                        <div class="widget category-list">
                            <h4 class="widget-header">{{ form_label(searchFullForm.classifications) }}</h4>
                           {{ form_widget(searchFullForm.classifications) }}
                        </div>


                        <!-- Filtre par genre-->
                        <div class="widget category-list ">
                            <h4 class="widget-header">{{ form_label(searchFullForm.genres) }}</h4>
                           {{ form_widget(searchFullForm.genres) }}
                        </div>

                        <!-- Filtre par édition -->
                        <div class="widget ">
                            <h4 class="widget-header">{{ form_label(searchFullForm.editors) }}</h4>
                            {{ form_widget(searchFullForm.editors) }}
                        </div>

                        <!-- Filtre par Statut -->
                        <div class="widget category-list">
                            <h4 class="widget-header">{{ form_label(searchFullForm.statuts) }}</h4>
                            {{ form_widget(searchFullForm.statuts) }}
                        </div>

                        <!--Filtre adapté en anime -->
                        <div class="widget category-list">
                            <h4 class="widget-header">Anime</h4>
                            {{ form_row(searchFullForm.animes) }}
                        </div>

                    </div>
                </div>
{{ form_end(searchFullForm) }}

                <div class="col-md-9">
                    {#                    Boucle sur le résultat de recherche des manga. On affiche ceux trouvé, si pas trouvé on affiche une phrase  #}

                    <div class="product-grid-list">
                        <div class="row mt-30">
                            {% for manga in mangas %}
                            <div class="col-sm-12 col-lg-4 col-md-6">
                                <!-- product card -->
                                <div class="product-item bg-light">
                                    <div class="card">
                                        <div class="thumb-content">
                                            <!-- <div class="price">$200</div> -->
                                            <a href="{{ url('single', {slug: manga.slug}) }}">
                                                <img class="card-img-top img-fluid" src="{{ asset('uploads/'~manga.photo.url) }}" alt="Card image cap">
                                            </a>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-title"><a href={{ url('single', {slug: manga.slug}) }}>{{ manga.frenchTitle }}</a></h4>
                                            <p class="card-text">{{ manga.summary }}</p>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% else %}
                                <h2>Il n'y a pas de Manga qui correspond à cette recherche</h2>
                            {% endfor %}

                        </div>
                    </div>
            </div>
        </div>
        </div>
    </section>

{% endblock section %}